@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GloballendingViews.ViewModels.LoanViewModel
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Customer</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Customer</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row list-input">
    <div class="col-md-3 mr0" style="margin:auto;">
        <div class="single-get-touch">
            @if (TempData["message"] == null)
            {
                <div class=""></div>
            }
            else
            {
                <div id="Msg" class="alert alert-success">
                    <h4> @TempData["message"] </h4>
                </div>
            }
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    <div class="row list-input">
        <div class="col-md-3 mr0" style="margin:auto;">
          
            <div class="single-get-touch">
               
                @Html.TextBoxFor(model => model.CustomerModel.FirstName, new { placeholder = "Firstname*", required = "required" })

            </div>
        </div>


    </div>
    <br />
    <div class="row list-input">
        <div class="col-md-3 mr0" style="margin:auto;">
            <div class="single-get-touch">

                @Html.TextBoxFor(model => model.CustomerModel.LastName, new { placeholder = "Lastname*", required = "required", @type="text" })

            </div>
        </div>


    </div>
    <br />

    <div class="row list-input">
        <div class="col-md-3 mr0" style="margin:auto;">
            <div class="single-get-touch">
                @Html.TextAreaFor(model => model.CustomerModel.ContactAddress, new { placeholder = "Contact Address *", type = "text", cols = "55", rows = "5", required = "required" })
            </div>
        </div>


    </div>
    <br />
    <div class="row list-input">
        <div class="col-md-3 mr0" style="margin:auto;">
            <div class="single-get-touch">
                @Html.TextBoxFor(model => model.CustomerModel.PhoneNumber, new { placeholder = "Phone Number*", required = "required", @type="number" })
            </div>
        </div>


    </div>
    <br />
    <div class="row list-input">
        <div class="col-md-3 mr0" style="margin:auto;">
            <div class="single-get-touch">

                @Html.TextBoxFor(model => model.CustomerModel.ContactEmail, new { placeholder = "Contact Email*", required = "required", @type="Email" })
            </div>
        </div>


    </div>
   
        <br />
    
                    <div class="col-md-3" style="margin:auto;">
                        <div class="single-get-touch">
                            <input type="submit" name="submit" class="btn btn-default btn-sm" value="Create Customer" />
                        </div>
                    </div>

}

