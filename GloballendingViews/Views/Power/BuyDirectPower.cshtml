@{
    ViewBag.Title = "BuyDirectPower";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>BuyDirectPower</h2>

<section class="section-padding contact-us-padding">

    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="">

                    @if (TempData["message"] == null)
                    {
                        <div class=""></div>
                    }
                    else
                    {
                        <div id="Msg" class="alert alert-success">
                            <h3> @TempData["message"] </h3>
                        </div>
                    }
                </div>
                @using (Html.BeginForm("BuyDirectPower", "Power", FormMethod.Post, new { id = "paytrx_form" }))
                {


                    <form action="" method="post">
                        <div class="row list-input">
                        <div class="col-md-6 mr0">
                                <div class="single-get-touch">
                             <input type="text" name="refNum" value="" />
                                </div>
                            </div>
                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">
                                    <input type="text" name="MerchantFk" value="" />
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="single-get-touch">
                                    <input type="submit" name="submit" class="btn btn-default btn-sm" value="Proceed" />
                                </div>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <script>
        $(function ()
  {
    $( ".datepicker" ).datepicker();
  });


    </script>
    <script>


    </script>
</section>

