@{
    ViewBag.Title = "CreditWallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GloballendingViews.Models.Power

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Power</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Buy Power</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="section-padding contact-us-padding">

    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="">

                    @if (TempData["message"] == null)
                    {
                        <div class=""></div>
                    }
                    else
                    {
                        <div id="Msg" class="alert alert-success">
                            <h3> @TempData["message"] </h3>
                        </div>
                    }
                </div>
   <img src="@TempData["message"]" class="w3ls-mobile" alt="" data-pin-nopin="true" width="140">
                @using (Html.BeginForm("BuyPower", "Power", FormMethod.Post, new { id = "paytrx_form" }))
                {

                   
                    <form action="" method="post">
                        <div class="row list-input">


                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">

                                    @Html.TextBoxFor(model => model.AccountType, null, new { placeholder = "Meter-Type", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">
                                    @Html.TextBoxFor(model => model.AccountNumber, null, new { placeholder = "Account Number/ Meter Number", required = "required" })
                                </div>
                            </div>


                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">

                                    @Html.TextBoxFor(model => model.Phone, null, new { type = "text", placeholder = "Phone Number", required = "required" })
                                </div>
                            </div>

                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">

                                    @Html.TextBoxFor(model => model.Email, null, new { type = "Email", placeholder = "Email e.g olsoft@yahoo.com", required = "required" })
                                </div>
                            </div>

                            <div class="col-md-6 mr0">
                                <div class="single-get-touch">

                                    @Html.TextBoxFor(model => model.Email, null, new { type = "Email", placeholder = "Amount e.g #1,000", required = "required" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="single-get-touch">
                                    <input type="submit" name="submit" class="btn btn-default btn-sm" value="Proceed" />
                                </div>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <script>
        $(function ()
  {
    $( ".datepicker" ).datepicker();
  });


    </script>
</section>


