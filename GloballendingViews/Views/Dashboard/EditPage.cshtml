<div class="forms">
    @if (TempData["message"] == null)
    {
        <div class=""></div>
    }
    else
    {
        <div id="Msg" class="alert alert-success">
            <h4> @TempData["message"] </h4>
        </div>
    }
    <h2 class="title1"></h2>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Create Role</h4>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-body">
                    @using (Html.BeginForm("UpdatePage", "Dashboard", FormMethod.Post, new { id = "signup" }))
                    {
                        <form>


                            <div class="form-group">
     <input type="text" style="display:none;" name="id" class="form-control1" value="@ViewBag.id" id="exampleInputEmail1" placeholder="ID">
                                <label for="exampleInputEmail1">Page Name</label>
                                <input type="text" style="" name="pagename" class="form-control1" value="@ViewBag.pagename" id="exampleInputEmail1" placeholder="ID">
                            </div>

                            <div class="form-group">
                                
              <label for="exampleInputEmail1">Page Url</label>
                                <input type="text" style="" name="pageurl" class="form-control1" value="@ViewBag.pageurl" id="exampleInputEmail1" placeholder="ID">
                            </div>

                            <button type="submit" class="btn btn-default">Update Page</button>

                        </form>
                    }
                </div>
            </div>
            <div class="col-md-3"></div>

        </div>

        <div class="tables">
            @*<h2 class="title1">Tables</h2>*@
            
        </div>
    </div>

</div>
