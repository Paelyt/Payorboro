@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="forms">
    @if (TempData["message"] == null)
            {
        <div class=""></div>
    }
    else
    {
        <div id="Msg" class="alert alert-success">
            <h4> @TempData["message"] </h4>
        </div>
    }
    <h2 class="title1"></h2>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Buy Power</h4>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-body">
                    @using (Html.BeginForm("BuyDirectPower", "Dashboard", FormMethod.Post, new { id = "" }))
                    {
                      
                        <form action="" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Reference Number</label>
                                <input type="text" name="refNum" class="form-control1" placeholder="Reference Number" value="" required />
                            </div>

                            @*<div class="form-group">
                                <label for="exampleInputEmail1">Merchant </label>
                                <input type="number" name="MerchantFk" class="form-control1" placeholder="Merchant FK" value="" required />
                            </div>*@
                            <button type="submit" class="btn btn-default">Buy</button>
                           
                        </form>
                    }
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
<script>
 $(document).ready(function () {
        $("#Msg").show();
        setTimeout(function () { $("#Msg").hide(); }, 5000);
    });
</script>
