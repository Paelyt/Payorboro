@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="forms">
    @if (TempData["message"] == null)
            {
        <div class=""></div>
    }
    else
    {
        <div id="Msg" class="alert alert-success">
            <h4> @TempData["message"] </h4>
        </div>
    }
    <h2 class="title1"></h2>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Update Password</h4>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-body">
                    @using (Html.BeginForm("EditPassword", "Dashboard", FormMethod.Post, new { id = "" }))
                    {
                        <form>


                            <div class="form-group">
                                <label for="exampleInputEmail1">Password</label>
                                <input type="password" class="form-control1" value="" id="exampleInputEmail1" placeholder="Current Password" name="password">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">New Password</label>
                                <input type="password" class="form-control1" value="" name="newPassword" id="exampleInputEmail1" placeholder="New Password">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Confirm New Password</label>
                                <input type="password" class="form-control1" value="" name="confirmPassword"  id="exampleInputEmail1" placeholder="Confirm Ne Password">
                            </div>

                            <button type="submit" class="btn btn-default">Update Password</button>

                        </form>
                    }
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
<script>
 $(document).ready(function () {
        $("#Msg").show();
        setTimeout(function () { $("#Msg").hide(); }, 5000);
    });
</script>
