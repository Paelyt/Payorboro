@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GloballendingViews.ViewModels.LoanViewModel

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Signup</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Signup</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />


@using (Html.BeginForm("CreateUser", "Loan", FormMethod.Post))
{
    <div class="col-md-3 mr0" style="margin:auto;">
        <div class="single-get-touch">
            <div class="">

                @if (TempData["message"] == null)
                {
                    <div class=""></div>
                }
                else
                {
                    <div id="Msg" class="alert alert-success">
                        <h4> @TempData["message"] </h4>
                    </div>
                }
            </div>
            </div>
        </div>
            <form action="" method="post">

                <div class="row list-input">

                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">

                            @Html.TextBoxFor(model => model.AccountsModel.firstname, new { placeholder = "Firstname *", type = "text", required = "required" })
                        </div>
                    </div>

                </div>
                <br />
                <div class="row list-input">
                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">
                            @Html.TextBoxFor(model => model.AccountsModel.lastname, new { placeholder = "LastName *", type = "text", required = "required" })

                        </div>
                    </div>


                </div>
                <br />

                <div class="row list-input">

                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">

                            @Html.TextBoxFor(model => model.AccountsModel.Phone, new { placeholder = "Phone *", type = "text", required = "required" })
                        </div>
                    </div>

                </div>
                <br />
                <div class="row list-input">
                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">
                            @Html.TextBoxFor(model => model.AccountsModel.pasword, new { placeholder = "Password *", type = "password", required = "required" })

                        </div>
                    </div>


                </div>
                <br />
                <div class="row list-input">
                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">
                            @Html.TextBoxFor(model => model.AccountsModel.confirmPassword, new { placeholder = "Confirm Password *", type = "password", required = "required" })

                        </div>
                    </div>


                </div>
                <br />
                <div class="row list-input">

                    <div class="col-md-3 mr0" style="margin:auto;">
                        <div class="single-get-touch">

                            @Html.TextBoxFor(model => model.AccountsModel.Email, new { placeholder = "Email *", type = "text", required = "required" })
                        </div>
                    </div>

                </div>
                <br />


                <div class="col-md-3" style="margin:auto;">
                    <div class="single-get-touch">
                        <input type="submit" name="submit" class="btn btn-default btn-sm" value="Register" />
                    </div>
                </div>
            </form>
            }
<script>
 $(document).ready(function () {
        $("#Msg").show();
        setTimeout(function () { $("#Msg").hide(); }, 5000);
    });
</script>
