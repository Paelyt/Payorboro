@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GloballendingViews.ViewModels.LoanViewModel

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>User Role</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Role</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row list-input">
    <div class="col-md-3 mr0" style="margin:auto;">
        <div class="single-get-touch">

            @if (TempData["message"] == null)
            {
                <div class=""></div>
            }
            else
            {
                <div id="Msg" class="alert alert-success">
                    <h3> @TempData["message"] </h3>
                </div>
            }
        </div>
    </div>
</div>
@using (Html.BeginForm("CreateUserRole", "Index", FormMethod.Post, new { id = "Form1" }))
{


    <form action="" method="post">
        <div class="row list-input">
            <div class="col-md-3 mr0" style="margin:auto;">
                <div class="single-get-touch">
         @Html.DropDownList("id", new SelectList(ViewBag.listUser, "id", "firstname"))
                </div>
            </div>


        </div>
        <br />
<div class="row list-input">
                    <div class="col-md-3 mr0" style="margin:auto;">
                        
                        <div class="single-get-touch">

 @foreach (var Assigned in Model.GetAssignRoless)
 {
   
                          
<input id="@Assigned.userid" type="checkbox" name="userid" value="@Assigned.userid" checked="checked" disabled="disabled" />
       <label for="@Assigned.userid">
                 @Assigned.Rolename
                                </label>
                            }
                        </div>
                    </div>


                </div>

        <div class="row list-input">
            <div class="col-md-3 mr0" style="margin:auto;">

                <div class="single-get-touch">

                    @foreach (var unAssigned in Model.UnGetAssignRoless)
                    {
               <input id="@unAssigned.Roleid" type="checkbox" name="roleid" value="@unAssigned.Roleid"  />
                            <label for="@unAssigned.Roleid">
                                @unAssigned.Rolename
                            </label>
                    }
                </div>
            </div>


        </div>
 <div class="col-md-3" style="margin:auto;">
            <div class="single-get-touch">
                <input type="submit" name="submit" class="btn btn-default btn-sm" value="Create User Role" />
            </div>
        </div>
    </form>
}

