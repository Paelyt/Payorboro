@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GloballendingViews.ViewModels.LoanViewModel

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Pages</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Page</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row list-input">
    <div class="col-md-3 mr0" style="margin:auto;">
        <div class="single-get-touch">
            @if (TempData["message"] == null)
            {
                <div class=""></div>
            }
            else
            {
                <div id="Msg" class="alert alert-success">
                    <h4> @TempData["message"] </h4>
                </div>
            }
        </div>
    </div>
</div>
@using (Html.BeginForm("CreatePage", "Loan", FormMethod.Post))
{


    <form action="" method="post">


        <div class="row list-input">
            <div class="col-md-3 mr0" style="margin:auto;">
                <div class="single-get-touch">
                    @Html.TextBoxFor(model => model.PageModel.PageName, new { placeholder = "Page Name *", type = "text", required = "required" })

                </div>
            </div>


        </div>
        <br />
        <div class="row list-input">
            <div class="col-md-3 mr0" style="margin:auto;">
                <div class="single-get-touch">
                    @Html.TextBoxFor(model => model.PageModel.PageUrl, new { placeholder = "Page Name *", type = "text", required = "required" })

                </div>
            </div>


        </div>
        <br />
        <div class="col-md-3" style="margin:auto;">
            <div class="single-get-touch">
                <input type="submit" name="submit" class="btn btn-default btn-sm" value="Create Page" />
            </div>
        </div>
    </form>
}

